{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "ES6",
      "DOM"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react", // Add this line to support JSX
    "moduleResolution": "node",
    "types": [
      "mocha",
      "node"
    ] // Add this line to include Mocha types
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}